<%= yield :top_of_page %>
<!DOCTYPE html>
<html lang="en" class="govuk-template ">

  <head>
    <meta charset="utf-8" />
    <title>GOV.UK - The best place to find government services and information</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <meta name="theme-color" content="#0b0c0c" />

    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <link rel="shortcut icon" sizes="16x16 32x32 48x48" href="<%= asset_url 'favicon.ico'%>" type="image/x-icon" />
    <link rel="mask-icon" href="<%= asset_url 'govuk-mask-icon.svg'%>" color="#0b0c0c">
    <link rel="apple-touch-icon" sizes="180x180" href="<%= asset_url 'govuk-apple-touch-icon-180x180.png'%>">
    <link rel="apple-touch-icon" sizes="167x167" href="<%= asset_url 'govuk-apple-touch-icon-167x167.png'%>">
    <link rel="apple-touch-icon" sizes="152x152" href="<%= asset_url 'govuk-apple-touch-icon-152x152.png'%>">
    <link rel="apple-touch-icon" href="<%= asset_url 'govuk-apple-touch-icon.png'%>">

    <!--[if !IE 8]><!-->
    <link href="/assets/govuk-frontend/all.css" rel="stylesheet" />
    <!--<![endif]-->

    <!--[if IE 8]>
      <link href="/assets/govuk-frontend/all-ie8.css" rel="stylesheet" />
    <![endif]-->

    <!--[if lt IE 9]>
      <script src="/html5-shiv/html5shiv.js"></script>
    <![endif]-->

    <meta property="og:image" content="/assets/images/govuk-opengraph-image.png">
    <%= yield :stylesheets %>
    <%= yield :head %>
  </head>

  <body class="govuk-template__body">
    <%= render_gtm_on_rails_tag_in_body %>
    <script>
      document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');
    </script>

    <%= yield :body_start %>

    <a href="#main-content" class="govuk-skip-link">Skip to main content</a>

    <div id="global-cookie-message">
      <% if content_for?(:cookie_message) %>
        <%= yield :cookie_message %>
      <% else %>
        <p>GOV.UK uses cookies to make the site simpler. <a href="https://www.gov.uk/help/cookies">Find out more about cookies</a></p>
      <% end %>
    </div>
    <!--end global-cookie-message-->

  <% unless @omit_header %>
    <header class="govuk-header " role="banner" data-module="header">
      <div class="govuk-header__container govuk-width-container">

        <div class="govuk-header__logo">
          <a href="#" class="govuk-header__link govuk-header__link--homepage">
            <span class="govuk-header__logotype">
               <a href="<%= root_path %>" title="Ministry of Justice - Help with fees" id="logo" class="content">
                <img src="<%= asset_path 'moj_logo_horizontal_36x246.png' %>" width="254" height="36" alt="">
              </a>
            </span>
          </a>
        </div>

        <%= yield :inside_header %>

        <div class="govuk-header__content">

          <% if content_for?(:proposition_header) %>
            <%= yield(:proposition_header) %>
          <% else %>
            <div class="header-proposition">
              <div class="content">
                <a href="/" id="proposition-name"><%= "#{config_item(:proposition_title)}" %></a>
                <%= yield(:proposition_links) %>
              </div>
            </div>
          <% end %>


         <!--  <button type="button" role="button" class="govuk-header__menu-button js-header-toggle" aria-controls="navigation" aria-label="Show or hide Top Level Navigation">Menu</button>
          <nav>
            <ul id="navigation" class="govuk-header__navigation " aria-label="Top Level Navigation">
              <li class="govuk-header__navigation-item govuk-header__navigation-item--active">
                <a class="govuk-header__link" href="#1">
                  Navigation item 1
                </a>
              </li>
            </ul>
          </nav> -->
        </div>
      </div>
    </header>
  <% end %>

  <%= yield :after_header %>

  <div class="govuk-width-container">
    <main class="govuk-main-wrapper app-main-class" id="main-content" role="main">

       <% if content_for?(:content_override) %>
          <%= yield(:content_override) %>
        <% else %>
          <%= yield :before_content %>
          <div id="wrapper" class="group">
            <section id="content" role="main">
              <%= content_for?(:content) ? yield(:content) : yield %>
            </section>
          </div>
        <% end %>
    </main>
  </div>


  <footer class="govuk-footer " role="contentinfo">
    <div class="govuk-width-container ">
      <div class="govuk-footer__meta">
        <div class="govuk-footer__meta-item govuk-footer__meta-item--grow">

          <svg role="presentation" focusable="false" class="govuk-footer__licence-logo" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 483.2 195.7" height="17" width="41">
            <path fill="currentColor" d="M421.5 142.8V.1l-50.7 32.3v161.1h112.4v-50.7zm-122.3-9.6A47.12 47.12 0 0 1 221 97.8c0-26 21.1-47.1 47.1-47.1 16.7 0 31.4 8.7 39.7 21.8l42.7-27.2A97.63 97.63 0 0 0 268.1 0c-36.5 0-68.3 20.1-85.1 49.7A98 98 0 0 0 97.8 0C43.9 0 0 43.9 0 97.8s43.9 97.8 97.8 97.8c36.5 0 68.3-20.1 85.1-49.7a97.76 97.76 0 0 0 149.6 25.4l19.4 22.2h3v-87.8h-80l24.3 27.5zM97.8 145c-26 0-47.1-21.1-47.1-47.1s21.1-47.1 47.1-47.1 47.2 21 47.2 47S123.8 145 97.8 145" />
          </svg>
          <span class="govuk-footer__licence-description">
            All content is available under the
            <a class="govuk-footer__link" href="https://www.nationalarchives.gov.uk/doc/open-government-licence/version/3/" rel="license">Open Government Licence v3.0</a>, except where otherwise stated
          </span>
        </div>
        <div class="govuk-footer__meta-item">
          <a class="govuk-footer__link govuk-footer__copyright-logo" href="https://www.nationalarchives.gov.uk/information-management/re-using-public-sector-information/uk-government-licensing-framework/crown-copyright/">Â© Crown copyright</a>
        </div>
      </div>
    </div>
  </footer>

  <%= javascript_include_tag "application" %>
  <script src="<%= asset_path "govuk-frontend/all.js" %>" type="text/javascript"></script>
  <script>
    window.GOVUKFrontend.initAll()
  </script>
</body>

</html>